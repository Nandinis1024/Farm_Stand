<% layout('layout/boilerplate')%>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Farms</title>
    <style>
        .jumbotron {
          background-position: center;
          background-repeat: no-repeat;
          background-size: cover;
          background-blend-mode: multiply;
          background-color: #707070;
        }
      </style>
</head>

<body>
    <section class="jumbotron" style="background-image: url('https://helios-i.mashable.com/imagery/articles/07tLMMc9MKuNkVQmSxMylNZ/hero-image.fill.size_1200x900.v1614276120.jpg');">
        <div class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-56">
            <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl">Welcome to the Schrute Farms - Farm Land</h1>
            <p class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Magna sit amet purus gravida.</p>
        </div>
    </section>
    


    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4" style="padding: 50px;">
        <% for(let farm of farms) { %>
          <a href="#" class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
            <div class="aspect-w-4 aspect-h-3">
              <img class="object-cover rounded-t-lg" src="<%= farm.image %>" alt="">
            </div>
            <div class="flex flex-col justify-between p-4 leading-normal">
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= farm.name %></h5>
              <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
              <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"> 
                Read More
              </button>
            </div>
          </a>
        <% } %>
      </div>
      


</body>

</html>